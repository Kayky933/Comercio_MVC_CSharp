@model Mercado.MVC.Models.VendaModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout-Interno.cshtml";
}

<h1>Criar</h1>

<h4>Venda</h4>
<hr />
<div class="row">
    @ViewBag.ErroExcluir
    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="Id_Usuario" value="@ViewBag.usuarioId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span asp-validation-for="Valor_Venda" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Produto" class="control-label"></label>
                <select asp-for="Id_Produto" class="form-control" asp-items="ViewBag.Id_Produto"></select>
            </div>
            <div class="form-group">
                <label asp-for="Id_Cliente" class="control-label"></label>
                <select asp-for="Id_Cliente" class="form-control" asp-items="ViewBag.Id_Cliente"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
