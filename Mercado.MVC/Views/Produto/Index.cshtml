@model IEnumerable<Mercado.MVC.Models.ProdutoModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout-Interno.cshtml";
}

<h1>Index Produto</h1>

<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco_Unidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade_Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unidade_De_Medida)
            </th>
            <th>
                Descrição Categoria
            </th>
            <th>
                Ultima Modificação
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco_Unidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade_Produto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unidade_De_Medida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAddProduto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
