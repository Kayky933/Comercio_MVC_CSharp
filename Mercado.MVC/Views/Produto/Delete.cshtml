@model Mercado.MVC.Models.ProdutoModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout-Interno.cshtml";
}

<h1>Deletar</h1>

<h3>Você tem certeza que quer deletar este item?</h3>
<p class="text-danger">@ViewBag.ErroExcluir</p>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco_Unidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco_Unidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade_Produto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade_Produto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Unidade_De_Medida)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Unidade_De_Medida)
        </dd>
        <dt class="col-sm-2">
            Descrição Categoria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Descricao)
        </dd>

        <dt class="col-sm-2">
           Ultima Modificação
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataAddProduto)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
